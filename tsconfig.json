{
  "compilerOptions": {
    "rootDir": "./src/moonbuggy",
    "outDir": "./dist",
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "declaration": true,
    "watch": false,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitAny": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": false,
    "pretty": true,
    "removeComments": true,
    "lib": ["es6", "es2017"],
    "types": [],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/example",
    "dist"
  ]
}